{
    "manifest_version": 3,
    "name": "YouTube Summary Extension",
    "version": "1.0",
    "description": "Obtenez un résumé des vidéos YouTube.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "youtube.png",
        "48": "youtube.png",
        "128": "youtube.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "youtube.png",
      "48": "youtube.png",
      "128": "youtube.png"
    }
  }